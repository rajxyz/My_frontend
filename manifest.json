{
  "name": "Flipify",
  "short_name": "LangApp",
  "description": "Flipify is a powerful language learning and conversion app designed to help students seamlessly transition between different mediums of instruction. Whether you're switching from one language to another or need tools to enhance your understanding, Flipify offers interactive courses, translation tools, and smart learning features to make the process smooth and effective.",
  "start_url": "/",
  "dir": "rtl",
  "lang": "en",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "fullscreen", "standalone", "minimal-ui"],
  "background_color": "#FFFFFF",
  "theme_color": "#6200EA",
  "iarc_rating_id": "",
  "categories": ["education", "productivity", "utilities"],
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+flipify",
      "url": "/translate?query=%s"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Translate",
      "short_name": "Translate",
      "description": "Start a quick translation",
      "url": "/translate",
      "icons": [{ "src": "/icons/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Recent Translations",
      "short_name": "History",
      "description": "View recent translations",
      "url": "/history",
      "icons": [{ "src": "/icons/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],
  "widgets": [
    {
      "name": "Flipify Quick Translate",
      "short_name": "Quick Translate",
      "description": "Instantly translate text from your home screen",
      "url": "/widget",
      "icons": [{ "src": "/icons/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],
  "edge_side_panel": {},
  "handle_links": "preferred",
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
